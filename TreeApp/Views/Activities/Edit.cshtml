@using TreeApp.Models

@model EditViewModel

@section head{

    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/Tree.css")
}

@section scripts{
    @Scripts.Render("~/Scripts/tree.js")
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading panel-head">Activities</div>
    <div id="frm-author" class="panel-body">

        <div class="modal-header">
            <h3 class="modal-title">Edit activity</h3>
        </div>

        <div class="modal-body">

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.Label("Select parent activity", new {@class = "control-label col-sm-3"})
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.SelectedParentActivityId, Model.Categories, new {@class = "form-control required"})
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Activity.ActivityDescription, new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Activity.ActivityDescription, new {@class = "form-control required"})
                            @Html.ValidationMessageFor(m => m.Activity.ActivityDescription, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Activity.StartDateTime, new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Activity.StartDateTime, new {@class = "form-control required", @Value = Model.Activity.StartDateTime.ToString("yyyy-MM-dd")})
                            @Html.ValidationMessageFor(m => m.Activity.StartDateTime, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Activity.EndDateTime, new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Activity.EndDateTime, new {@class = "form-control required", @Value = Model.Activity.EndDateTime.ToString("yyyy-MM-dd")})
                            @Html.ValidationMessageFor(m => m.Activity.EndDateTime, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(m => m.Activity.ActivityID)
                @Html.HiddenFor(m => m.Activity.ParentActivityID)
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Edit" class="btn btn-success"/>
            @Html.ActionLink("Back", "Index", null, new {@class = "btn btn-danger"})
        </div>
    </div>
        </div>
}
