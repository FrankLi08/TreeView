@model TreeApp.Models.Activities

@section head{
    @Styles.Render("~/Content/Tree.css")
    @Styles.Render("~/Content/Site.css")
}

@section scripts{
    @Scripts.Render("~/Scripts/tree.js")
}

<div class="panel panel-primary">
    <div class="panel-heading panel-head">Activies</div>
    <div id="frm-author" class="panel-body">

        <div class="modal-header">
            <h3 class="modal-title">Activity details</h3>
        </div>

        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.ActivityDescription, new {@class = "control-label col-sm-3"})
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ActivityDescription, new {@class = "form-control required", @disabled = "disabled"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => Model.StartDateTime, new {@class = "control-label col-sm-3"})
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.StartDateTime.Date, new {@class = "form-control required", @disabled = "disabled", @Value = Model.StartDateTime.ToString("yyyy-MM-dd")})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => Model.EndDateTime, new {@class = "control-label col-sm-3"})
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.EndDateTime, new {@class = "form-control required", @disabled = "disabled", @Value = Model.StartDateTime.ToString("yyyy-MM-dd")})
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-danger" id="GoBack" type="submit">Back</button>
        </div>
    </div>
</div>